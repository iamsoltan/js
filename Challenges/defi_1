// Create a function that takes two numbers as arguments and returns their sum.

function Somme(n1,n2){
return  n1+n2
}
console.log(Somme(7,15))

// Write a function that takes the base and height of a triangle as arguments and returns its area.

function TriangleArea(B,H){

  return (b*h)/2
}
console.log(TriangleArea(10,12))

// Write a function that takes the height and the width of rectangle as arguments and returns its perimeter.

  function RectanglePerimetre(W,H){

  return w*2+h*2
}
console.log(RectanglePerimetre(6,6))
 
 
// Write a function that takes a number as argument and returns it square.
function SquareNumber(n){

  return n*n
}
console.log(SquareNumber(9))

// Write a function that takes two numbers are passed as parameters. The first parameter divided by the second parameter will have the remainder returns that value.

function Rest(N ,n ){


  return N % n
}

console.log(Rest(450,55))

// Write a function that takes hours as argument  and converts its into seconds.

function HourToSecond(H){

  return h*3600
}
console.log(HourToSecond(24))

// Write a function that takes two arguments (hours, minutes) and converts them into seconds.
function ConvertToSecond(H , M){

  return H*3600 + M*60
}
console.log(ConvertToSecond(24,15))

//Create a function that takes a name as argument and returns a greeting in the form of a string → "Hello name!".

function Greeting(name){

  return "hello " + name + "!"
}
console.log(Greeting("Joseph"))


  
// Create a function that  takes a string as argument and returns the length of this string.

function LengthOfString(str){

  return str.length
}
console.log(LengthOfString("hello simplonien"))



/* 
    // Statement 

Create a function that takes two strings as arguments, firstName and lastName, and returns a single string in the format "last, first".
    
    // Example 

 Name('Amira','Chaabane') -> 'Amira Chaabane'

*/
function Name(firstName , lastName){

  return firstName + " " + lastName
}
console.log(Name("João","Félix"))

// write a function that takes a string as argument and returns it to number

function StringToNumber(str){

  return str*1
}
console.log(StringToNumber("200"))

// write a function that takes a number as argument and returns it to string

function NumberToString(number){

  return number + ""
}
console.log(NumberToString(200))
